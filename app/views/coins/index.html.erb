<p id="notice"><%= notice %></p>


<h1>Moedas</h1>
<h2> <%= cookies[:curso]%> </h2>
<h2> <%= session[:curso] %> </h2>

<table>
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:description) %></th>
      <th><%= @coins.human_attribute_name(:acronym) %></th>
      <th><%= @coins.human_attribute_name(:url_image) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
       <!-- <td>  <img src="<#%= coin.url_image %>" width="25px" height="25px" /></td>  (Em html com codigo ruby) -->
        <td>  <%= image_tag  coin.url_image, width:25, height:25 %></td><!-- Em ruby puro colocando imagem caminho e altura e largura-->
        <td><%= link_to t('links.show'), coin %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: t('script1') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova moeda', new_coin_path %>
